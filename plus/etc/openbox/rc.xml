<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">

    <desktops>
        <number>1</number>
        <firstdesk>1</firstdesk>
    </desktops>

    <applications>
        <!-- Run obxprop | grep "^_OB_APP" to see the value -->

        <application type="normal">
            <maximized>yes</maximized>
            <fullscreen>yes</fullscreen>
        </application>

        <!-- Evita que as caixas de confirmação de execução de scripts e outras mensagem apareçam maximizadas -->
        <application name="pcmanfm">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
            <maximized>no</maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application title="pcmanfm">
            <maximized>yes</maximized>
        </application>
        <application title="userdata">
            <maximized>yes</maximized>
        </application>
        <application title="/">
            <maximized>yes</maximized>
        </application>

        <application name="xterm">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
        </application>

        <application name="leafpad">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
        </application>

        <application class="Firefox">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
        </application>

        <application title="Dolphin 5.0">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized>yes</maximized>
        </application>

        <application name="parsecd">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>

        <application class="Yad">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application title="batocera-load-screen">
            <layer>above</layer>
        </application>

        <application title="Event Tester">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>

        <application class="Wine">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application class="steam_proton">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application name="*.exe">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application name="explorer.exe">
            <maximized>yes</maximized>
        </application>
        <application name="wordpad.exe">
            <maximized>yes</maximized>
        </application>
        <application name="regedit.exe">
            <maximized>yes</maximized>
        </application>
        <application name="oleview.exe">
            <maximized>yes</maximized>
        </application>

    </applications>

    <theme>
        <name>Plastik Blue Crystal Box V2</name>
        <titleLayout>NLMC</titleLayout>
        <keepBorder>yes</keepBorder>
        <animateIconify>yes</animateIconify>
        <font place="ActiveWindow">
            <size>10</size>
            <slant>Italic</slant>
        </font>
        <font place="InactiveWindow">
            <size>10</size>
            <slant>Italic</slant>
        </font>
        <font place="MenuHeader">
            <size>10</size>
            <slant>Italic</slant>
        </font>
        <font place="MenuItem">
            <name>Terminus</name>
            <size>10</size>
            <slant>Italic</slant>
        </font>
        <font place="OnScreenDisplay">
            <size>11</size>
            <slant>Italic</slant>
        </font>
    </theme>

</openbox_config>