<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">

    <!-- Run obxprop | grep "^_OB_APP" to see the value -->

    <desktops>
        <number>1</number>
        <firstdesk>1</firstdesk>
    </desktops>

    <theme>
        <name>Plastik Blue Crystal Box V2</name>
        <titleLayout>NLIMC</titleLayout>
        <keepBorder>no</keepBorder>
        <animateIconify>yes</animateIconify>
        <font place="ActiveWindow">
            <size>12</size>
            <slant>Italic</slant>
        </font>
        <font place="InactiveWindow">
            <size>12</size>
            <slant>Italic</slant>
        </font>
        <font place="MenuHeader">
            <size>12</size>
            <slant>Italic</slant>
        </font>
        <font place="MenuItem">
            <name>Terminus</name>
            <size>12</size>
            <slant>Italic</slant>
        </font>
        <font place="OnScreenDisplay">
            <size>12</size>
            <slant>Italic</slant>
        </font>
    </theme>

    <applications>
        <application type="normal">
            <maximized>yes</maximized>
            <fullscreen>yes</fullscreen>
        </application>

        <!-- Evita que as caixas de confirmação de execução de scripts e outras mensagem apareçam maximizadas -->
        <application name="pcmanfm">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
            <maximized>no</maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application title="pcmanfm">
            <maximized>yes</maximized>
        </application>
        <application title="userdata">
            <maximized>yes</maximized>
        </application>
        <application title="/">
            <maximized>yes</maximized>
        </application>

        <application name="xterm">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
        </application>

        <application name="leafpad">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
        </application>
        
        <application name="goverlay">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>

        <application name="nvidia-settings">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
            <size>
               <width>1024</width>
               <height>640</height>
            </size>
        </application>

        <application class="Firefox">
            <decor>yes</decor>
            <fullscreen>no</fullscreen>
        </application>

        <application title="Dolphin 5.0">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized>yes</maximized>
        </application>

        <application name="yuzu">
            <decor>yes</decor>
            <fullscreen></fullscreen>
        </application>

        <application name="citra-qt">
            <decor>yes</decor>
            <fullscreen></fullscreen>
        </application>

        <application name="rpcs3">
            <decor>yes</decor>
            <fullscreen></fullscreen>
        </application>

        <application name="parsecd">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>

        <application class="qBittorrent">
            <decor>yes</decor>
            <fullscreen></fullscreen>
        </application>

        <application class="Yad">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application title="batocera-load-screen">
            <layer>above</layer>
        </application>

        <application title="Event Tester">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>

        <application class="Wine">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application class="steam_proton">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application name="*.exe">
            <decor>yes</decor>
            <fullscreen></fullscreen>
            <maximized></maximized>
            <position type="normal">
                <x>center</x>
                <y>center</y>
            </position>
        </application>
        <application name="explorer.exe">
            <maximized>yes</maximized>
        </application>
        <application name="wordpad.exe">
            <maximized>yes</maximized>
        </application>
        <application name="regedit.exe">
            <maximized>yes</maximized>
        </application>
        <application name="oleview.exe">
            <maximized>yes</maximized>
        </application>
        <application title="Batocera.PLUS - Wine desktop">
            <decor>no</decor>
        </application>

    </applications>

