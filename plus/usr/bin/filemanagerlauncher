#!/bin/bash

export XDG_MENU_PREFIX=batocera-
export XDG_CONFIG_DIRS=/etc/xdg

# fix for exfat on HOME + pcmanfm
export XDG_CACHE_HOME=/tmp/xdg_cache

tint2 -c /etc/xdg/tint2/tint2rc.plus.cfg &
PID_TINT=$!

mouse-pointer on

DISPLAY=:0.0 pcmanfm /userdata

mouse-pointer off

kill -15 ${PID_TINT}

exit 0