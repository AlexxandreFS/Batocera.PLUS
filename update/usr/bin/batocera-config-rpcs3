#!/bin/bash
###
### Batocera.PLUS
### Sérgio de Carvalho Júnior
### Alexandre Freire dos Santos
################################################################################

RPCS3_FW="${1}"

RPCS3_EMUL_DIR='/opt/Rpcs3'
RPCS3_BIOS_DIR="${HOME}/../bios"
RPCS3_SAVE_DIR="${HOME}/../saves/ps3"
RPCS3_CONF_DIR="${HOME}/configs/rpcs3"

RPCS3_FW_URL='http://dbr01.ps3.update.playstation.net/update/ps3/image/br/2021_0601_a0b63a3e4ae92ed176d6b9a67ce447f0/PS3UPDAT.PUP'

export XDG_CONFIG_HOME="${HOME}/configs"
export XDG_CACHE_HOME="${HOME}/../saves"
export QT_QPA_PLATFORM=xcb

function CreateConfigs()
{
    mkdir -p  "${RPCS3_SAVE_DIR}/GuiConfigs"
    ln    -sf "${RPCS3_SAVE_DIR}" "${RPCS3_CONF_DIR}"

    mkdir -p  "${RPCS3_CONF_DIR}/GuiConfigs"

   (echo '[GameList]'
    echo 'hidden_list=@Invalid()'
    echo 'iconColor=@Variant(\0\0\0\x43\x1\xff\xff\xf0\xf0\xf0\xf0\xf0\xf0\0\0)'
    echo 'marginFactor=0.09'
    echo 'textFactor=2'
    echo '[Localization]'
    echo 'language=en'
    echo '[Logger]'
    echo 'level=4'
    echo 'stack=true'
    echo '[main_window]'
    echo 'infoBoxEnabledInstallPUP=false'
    echo 'infoBoxEnabledWelcome=false'
    echo "lastExplorePathPUP=${RPCS3_BIOS_DIR}") > "${RPCS3_CONF_DIR}/GuiConfigs/CurrentSettings.ini"

   (echo 'Audio:'
    echo '  Audio Channels: Downmix to Stereo'
    echo '  Renderer: ALSA'
    echo 'Core:'
    echo '  PPU Decoder: Recompiler (LLVM)'
    echo '  PPU LLVM Accurate Vector NaN values: true'
    echo '  SPU Decoder: Recompiler (LLVM)'
    echo 'Miscellaneous:'
    echo '  Exit RPCS3 when process finishes: true'
    echo '  Start games in fullscreen mode: true'
    echo 'Video:'
    echo '  Frame limit: 60'
    echo '  Renderer: Vulkan') > "${RPCS3_CONF_DIR}/config.yml"
}

if [ ! "$(ls -A "${RPCS3_CONF_DIR}" 2> /dev/null)" ]; then
    CreateConfigs
fi

if [ "${RPCS3_FW}" == '--firmware' ]; then

    ### CREATE BASE CONFIG FOR THE FIRST RUN
    CreateConfigs

    ### FIRMWARE INSTALL

    if [ -f "${RPCS3_BIOS_DIR}/PS3UPDAT.PUP" ]; then
        FILE="${RPCS3_BIOS_DIR}/PS3UPDAT.PUP"
    else
        ### INTERNET CONNECTION CHECK
        if wget -q --spider http://google.com; then

            ### LOADING SCREEN
            batocera-load-screen -t 600 -i "${RPCS3_EMUL_DIR}/fd.png" &

            ### DOWNLOADING FIRMWARE
            rm -f "${RPCS3_BIOS_DIR}/PS3UPDAT.PUP" # apaga download incompleto se houver
            curl -L -C - "${RPCS3_FW_URL}" -o "${RPCS3_BIOS_DIR}/PS3UPDAT.PUP"
            FILE="${RPCS3_BIOS_DIR}/PS3UPDAT.PUP"

            ### STOP LOADING SCREEN
            if [ "$(pidof yad)" ]; then
                killall yad
            fi

            wait
        else
            ### ABORT FIRMWARE DOWNLOADING
            batocera-load-screen -t 5 -i "${RPCS3_EMUL_DIR}/fdf.png"
            exit 0
        fi
    fi

    ### INSTALL FIRMWARE
    exec /usr/bin/rpcs3 --installfw "${FILE}" &

    for i in {1..100}; do
        if [ "$(pidof -s rpcs3)" ]; then
            sleep 5
            continue
        fi

        ### THIS THE LAST FILE MAKE BY RPCS3 DURING FW INSTALATION AND CACHE CREATION
        if [ -f "${HOME}/../saves/rpcs3/cache/ppu-eLWQCfQ8qmSdw23gQR64uFJJVNbG-libavcenc_small.sprx/v4-kusa-VH8ciyP099htKknrbZvUsj-00000s-haswell.obj.gz" ]; then
            ${RPCS3_EMUL_DIR}/killrpcs3
            break
        fi
    done

    ### DELETE FIRMWARE AFTER INSTALATION, WHE DONT NEED ANYMORE
    rm -f "${RPCS3_BIOS_DIR}/PS3UPDAT.PUP"

else
    ### RUN RPCS3 BY F1 MENU SHORTCUT
    /usr/bin/rpcs3
fi

exit 0